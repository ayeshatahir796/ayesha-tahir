<head>
    <title>Edit Product</title>
    <link rel="stylesheet" href="/css/edit-product.css">
</head>

<body>
    <div class="form-container">
        <a href="/products" class="cancel-cross">Ã—</a>
        <h5>Edit Product</h5>
        <form action="" method="POST" enctype="multipart/form-data"> <!-- Add enctype for file uploads -->
            <div class="form-group">
                <label for="name">Product Name:</label>
                <input type="text" id="name" name="name" value="<%= pro.name %>" required>
            </div>

            <div class="form-group">
                <label for="price">Product Price:</label>
                <input type="number" id="price" name="price" value="<%= pro.price %>" required>
            </div>

            <div class="form-group">
                <label for="description">Product Description:</label>
                <input type="text" id="description" name="description" value="<%= pro.description %>" >
            </div>

            <!-- Display current picture -->
            <div class="form-group">
                <label>Current Picture:</label><br>
                <img src="/<%= pro.picture %>" alt="Current Product Image" style="width: 100px; height: auto;">
            </div>

            <!-- Upload a new picture -->
            <div class="form-group">
                <label for="picture">Upload New Picture:</label>
                <input type="file" id="file" name="file" accept="image/*">
            </div>

            <button type="submit">Update</button>
        </form>
    </div>
</body>
