<div class="container mt-5">
    <h2 class="text-center">Category List</h2>
    <a href="/admin/categories/add" class="btn btn-primary mb-3">Add New Category</a>

    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Category Name</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% categories.forEach((category, index) => { %>
                <tr>
                    <th scope="row"><%= index + 1 %></th>
                    <td><%= category.name %></td>
                    <td>
                        <!-- Edit and Delete buttons can be added later -->
                        <a href="/admin/categories/edit/<%= category._id %>" class="btn btn-warning btn-sm">Edit</a>
                        <a href="/admin/categories/delete/<%= category._id %>" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>